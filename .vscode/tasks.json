{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy Frontend to Vercel",
      "type": "shell",
      "command": "npx vercel --prod --yes",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Deploy Admin to Vercel",
      "type": "shell",
      "command": "cd '${workspaceFolder}' && npx vercel --prod --yes",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
